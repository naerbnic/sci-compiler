# Enable Bzlmod for every Bazel command
common --enable_bzlmod
common --enable_platform_specific_config

build:windows --copt /std:c++20 --host_copt /std:c++20
build:macos --copt --std=c++20 --host_copt --std=c++20
build:linux --copt --std=c++20 --host_copt --std=c++20

build:asan --strip=never
build:asan --copt -fsanitize=address
build:asan --copt -DADDRESS_SANITIZER
build:asan --copt -O1
build:asan --copt -g
build:asan --copt -fno-omit-frame-pointer
build:asan --linkopt -fsanitize=address
build:asan --host_copt -fsanitize=address
build:asan --host_copt -DADDRESS_SANITIZER
build:asan --host_copt -O1
build:asan --host_copt -g
build:asan --host_copt -fno-omit-frame-pointer
build:asan --host_linkopt -fsanitize=address